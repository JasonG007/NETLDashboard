                    </TreeViewItem>
                    <TreeViewItem Header="Sensor 2">
                        <TreeViewItem Header="Live Graph"/>
                        <TreeViewItem Header="Historical Graph"/>
                    </TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Name="Tree_Item_Pulverizer" Header="Pulverizer" IsSelected="True" MouseLeftButtonUp="Tree_Item_Pulverizer_MouseLeftButtonUp">
