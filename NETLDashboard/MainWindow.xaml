<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NETLDashboard"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" xmlns:Points="clr-namespace:LiveCharts.Wpf.Points;assembly=LiveCharts.Wpf" x:Class="NETLDashboard.MainWindow"
        mc:Ignorable="d"

        Title="NETL Command Center" Height="705.267" Width="1097.569" ResizeMode="CanResizeWithGrip">
    <Grid ClipToBounds="True">

        <TabControl IsSynchronizedWithCurrentItem="True">
            <TabItem Header="Detailed View">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="380*"/>
                    </Grid.ColumnDefinitions>

                    <TreeView x:Name="sensorTreeList" Grid.ColumnSpan="2" Margin="-3,-3,0,-3" HorizontalAlignment="Left" Width="159" >

                        <TreeViewItem Header="Boiler" IsSelected="True">
                            <TreeViewItem Header="Sensor 1" MouseLeftButtonUp="TreeViewItem_Boiler_Sensor1_MouseLeftButtonUp"/>
                            <TreeViewItem Header="Sensor 2"/>
                        </TreeViewItem>
                        <TreeViewItem Header="Pressure" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Gas" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph" />
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Vibration" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeView>

                    <Grid x:Name="graphGrid" Background="Black" Grid.Column="1" Margin="120,19,-2,-2" RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.015"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Grid.RenderTransform>
                    </Grid>
                    <Grid Grid.Column="1" HorizontalAlignment="Left" Height="19" Margin="125,0,0,0" VerticalAlignment="Top" Width="923"/>
                    <RadioButton Name="LiveGraph" Content="Live Graph" Grid.Column="1" HorizontalAlignment="Left" Margin="425,4,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
                    <RadioButton Name="HistoricalGraph" Content="Historical Graph" Grid.Column="1" HorizontalAlignment="Left" Margin="588,4,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
