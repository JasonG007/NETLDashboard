<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NETLDashboard"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" x:Class="NETLDashboard.MainWindow"
        mc:Ignorable="d"
        Title="NETL Command Center" Height="705.267" Width="1097.569" SizeToContent="WidthAndHeight" MinWidth="1200" MinHeight="720">
    <Grid>
        <TabControl IsSynchronizedWithCurrentItem="True">
            <TabItem Header="Dashboard">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Detailed View">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="380*"/>
                    </Grid.ColumnDefinitions>
                    <TreeView Name="sensorTreeList" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="131" >
                        <TreeViewItem Header="Temperature" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Pressure" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Gas" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Vibration" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeView>
                    <Grid Grid.Column="1" Margin="97,10,0,0">
                        <Wpf:CartesianChart Margin="10,10,0,0"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
