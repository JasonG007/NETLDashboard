<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NETLDashboard"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" xmlns:Points="clr-namespace:LiveCharts.Wpf.Points;assembly=LiveCharts.Wpf" xmlns:ZoomingAndPanning="clr-namespace:Wpf.CartesianChart.ZoomingAndPanning" x:Class="NETLDashboard.MainWindow"
        mc:Ignorable="d"

        Title="NETL Command Center" Height="866.267" Width="1467.569" ResizeMode="CanResizeWithGrip">
    <Grid ClipToBounds="True">

        <TabControl IsSynchronizedWithCurrentItem="True">

            
            <TabItem Header="Detailed View">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="380*"/>
                    </Grid.ColumnDefinitions>

                    <TreeView x:Name="sensorTreeList" Grid.ColumnSpan="2" Margin="-3,-3,0,-3" HorizontalAlignment="Left" Width="159" >
                        

                        <TreeViewItem Name="Tree_Item_Furnace" Header="Furnace" IsSelected="True" MouseLeftButtonUp = "Furnace_MouseLeftButtonUp">
                            <TreeViewItem Header="Sensor 1" x:Name="Physical" MouseLeftButtonUp="TreeViewItem_Boiler_Sensor1_MouseLeftButtonUp"/>
                            <TreeViewItem Header="Sensor 2" x:Name="Virtual" MouseLeftButtonUp="TreeViewItem_Boiler_Sensor2_MouseLeftButtonUp"/>
                        </TreeViewItem>
                        <TreeViewItem Header="Boiler" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Stack" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph" />
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Turbine" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Tubes" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Container" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Condenser" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Generator" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Transformer" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Pulverizer" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                        </TreeViewItem>
                        <TreeViewItem Header="Coal Supplier" IsSelected="True">
                            <TreeViewItem Header="Sensor 1">
                                <TreeViewItem Header="Live Graph"/>
                                <TreeViewItem Header="Historical Graph"/>
                            </TreeViewItem>
                            <TreeViewItem Header="Sensor 2">
                                <TreeViewItem Header="Live Graph"/>
