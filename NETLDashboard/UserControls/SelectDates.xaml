<UserControl x:Class="NETLDashboard.SelectDates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:NETLDashboard"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800" Height="100">
    <Grid Name="SelectionOfDates">
        <Button Click="ResetZoomOnClick" Width="95" HorizontalAlignment="Right" VerticalAlignment="Top">Reset Zoom</Button>
        <DatePicker x:Name="End" SelectedDate="{x:Static sys:DateTime.Today}" Margin="0,75,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <DatePicker Name="Start" SelectedDate="{x:Static sys:DateTime.Today}" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="View" Margin="5,24,0,0" Click="Selectdates" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="95"/>
        <Label Foreground="White" FontSize="18" Margin="0,0,0,0" Content="Start Date:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Foreground="White" FontSize="18" Margin="0,-25,0,0" Content="End Date:" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
