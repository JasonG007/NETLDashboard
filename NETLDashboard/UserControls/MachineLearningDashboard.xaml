<UserControl x:Class="NETLDashboard.UserControls.MachineLearningDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NETLDashboard.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MLDashboard" Background="Black">
        <TabControl Margin="0,0,0,0">
            <TabItem Header="Model Building" FontSize="16">
                <Grid Background="Black">
                    <ListBox x:Name="Algorithms" SelectionMode="Multiple" HorizontalAlignment="Left" Height="125" Margin="240,222,0,0" VerticalAlignment="Top" Width="287"/>
                    <ComboBox HorizontalAlignment="Left" Margin="240,106,0,0" VerticalAlignment="Top" Width="287" Height="30"/>
                    <Label Content="Select Algorithm(s):" Foreground="White" FontSize="22" HorizontalAlignment="Left" Margin="282,178,0,0" VerticalAlignment="Top"/>
                    <Label Content="Select Component:" Foreground="White" FontSize="22" HorizontalAlignment="Left" Margin="282,62,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Prediction" FontSize="16">
                <Grid Background="Black"/>
            </TabItem>
            <TabItem Header="Help" FontSize="16">
                <Grid Background="Black"/>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
