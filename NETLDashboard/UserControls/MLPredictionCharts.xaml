<UserControl x:Class="NETLDashboard.UserControls.MLPredictionCharts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NETLDashboard.UserControls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <lvc:PieChart LegendLocation="Bottom" FontSize="24" Foreground="Black" Hoverable="False" DataTooltip="{x:Null}">
            <lvc:PieChart.Series>
                <lvc:PieSeries Title="Correct" Values="{Binding CorrectValue}" DataLabels="True" Fill="#078d1d" FontSize="16"/>
                <lvc:PieSeries Title="Malicious" Values="{Binding MaliciousValue}" DataLabels="True" Fill="Red" FontSize="16"/>
            </lvc:PieChart.Series>
       </lvc:PieChart>
    </Grid>
</UserControl>
